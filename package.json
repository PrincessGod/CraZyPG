{
  "name": "crazypg",
  "version": "1.0.0",
  "description": "webgl lib for 3d",
  "main": "build/czpg.js",
  "scripts": {
    "build": "rollup -c",
    "build-min": "rollup -c && uglifyjs build/czpg.js -cm > build/czpg.min.js",
    "build-module": "cross-env NODE_ENV=module rollup -c",
    "watch": "rollup -c -w",
    "start": "serve",
    "dev": "npm-run-all --parallel start watch",
    "lint": "eslint src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PrincessGod/CraZyPG.git"
  },
  "keywords": [
    "webgl",
    "webgl 2.0",
    "ecs",
    "3d"
  ],
  "author": "PrincessGod",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PrincessGod/CraZyPG/issues"
  },
  "homepage": "https://github.com/PrincessGod/CraZyPG",
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-preset-es2015-rollup": "^3.0.0",
    "cross-env": "^5.1.3",
    "eslint": "^4.13.0",
    "eslint-config-mdcs": "^4.2.2",
    "npm-run-all": "^4.1.3",
    "rollup": "^0.64.0",
    "rollup-plugin-babel": "^3.0.7",
    "rollup-plugin-commonjs": "^9.1.4",
    "rollup-plugin-node-resolve": "^3.3.0",
    "serve": "^9.4.0",
    "uglify-js": "^3.4.6"
  },
  "dependencies": {
    "czpg-ecs": "^1.0.7"
  },
  "babel": {
    "presets": [
      "es2015-rollup"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "mdcs"
    ],
    "globals": {
      "CZPG": true
    },
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "indent": [
        "error",
        4
      ],
      "linebreak-style": 0,
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "eol-last": [
        "error",
        "always"
      ],
      "no-bitwise": 0,
      "func-names": 0,
      "no-console": 0,
      "import/prefer-default-export": 0,
      "curly": [
        "error",
        "multi"
      ],
      "max-len": 0,
      "prefer-destructuring": 0,
      "no-underscore-dangle": 0,
      "no-mixed-operators": 0,
      "no-plusplus": 0,
      "no-continue": 0,
      "consistent-return": 0
    }
  },
  "eslintIgnore": [
    "*.glsl"
  ]
}
