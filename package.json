{
  "name": "crazypg",
  "version": "1.0.0",
  "description": "webgl lib for 3d",
  "main": "build/czpg.js",
  "scripts": {
    "build": "rollup -c",
    "build-min": "rollup -c && uglifyjs build/czpg.js -cm > build/czpg.min.js",
    "build-module": "cross-env NODE_ENV=module rollup -c",
    "watch": "rollup -c -w",
    "start": "serve",
    "dev": "npm-run-all --parallel start watch",
    "lint": "eslint src",
    "test": "nyc --reporter=html ava",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PrincessGod/CraZyPG.git"
  },
  "keywords": [
    "webgl",
    "webgl 2.0",
    "ecs",
    "3d"
  ],
  "author": "PrincessGod",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PrincessGod/CraZyPG/issues"
  },
  "homepage": "https://github.com/PrincessGod/CraZyPG",
  "devDependencies": {
    "ava": "1.0.0-beta.7",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-preset-es2015-rollup": "^3.0.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.4.0",
    "eslint-config-mdcs": "^4.2.3",
    "npm-run-all": "^4.1.3",
    "nyc": "^12.0.2",
    "coveralls": "^3.0.2",
    "rollup": "^0.65.0",
    "rollup-plugin-babel": "^3.0.7",
    "rollup-plugin-commonjs": "^9.1.6",
    "rollup-plugin-node-resolve": "^3.3.0",
    "serve": "^10.0.0",
    "uglify-js": "^3.4.8"
  },
  "dependencies": {
    "czpg-ecs": "^1.0.9"
  },
  "babel": {
    "presets": [
      "es2015-rollup"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "mdcs"
    ],
    "globals": {
      "CZPG": true
    },
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "indent": [
        "error",
        4
      ],
      "linebreak-style": 0,
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "eol-last": [
        "error",
        "always"
      ],
      "no-multi-spaces": 0
    }
  },
  "eslintIgnore": [
    "*.glsl"
  ],
  "ava": {
    "sources": "test/**/*.js",
    "babel": {
      "testOptions": {
        "babelrc": false
      }
    }
  }
}
