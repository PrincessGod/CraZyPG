    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "AVA Test",
            "program": "${workspaceFolder}/node_modules/ava/profile.js",
            "args": [
                "${file}"
            ],
            "skipFiles": [
                "<node_internals>/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "AVA test serially",
            "program": "${workspaceRoot}/node_modules/ava/profile.js",
            "args": [
              "--serial",
              "${file}"
            ],
            "skipFiles": [
                "<node_internals>/**/*.js"
            ]
        }
    ]
}
